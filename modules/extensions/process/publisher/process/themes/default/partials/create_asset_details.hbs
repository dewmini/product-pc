<div class="form-group" xmlns="http://www.w3.org/1999/html">
    <div class="sidebar-wrapper" id="left-sidebar"
         style="width: 260px; left: 0px; height: 399.883px; padding-top: 50px;" data-side="left" data-width="100"
         data-fixed-offset-top="0" data-offset-top="80">
        <div id="content">
            <ul class="nav nav-stacked">
                <li id="textEditor"><a href="#" onclick="showTextEditor(this)">Describe process in
                    text<i id="textadded" class="" style="color: red"></i></a></li>
                <li id="bpmn"><a href="#" onclick="associateBPMN(this)">Associate BPMN
                    model<i id="bpmnadded" class="" style="color: red"></i></a></li>
                <li id="flowChart"><a href="#" onclick="associateFlowChart(this)">Associate Flow
                    Chart<i id="flowchartadded" class="" style="color: red"></i></a></li>
                <li id="doc"><a href="#" onclick="associateDocument(this)">Associate
                    Documents<i id="docadded" class="" style="color: red"></i></a></li>
            </ul>
        </div>
        <br/>
        <div id="pButtons" class="form-actions">
            <div class="form-group" style="padding-left: 20px">
                <button class="btn btn-success" id="associationBtn" value="Associations"
                        onclick="processAssociations(this)">
                    Associations
                </button>
            </div>
        </div>
    </div>

    <div class="container">
    {{> add_process_text .}}
    {{> add_bpmn .}}
    {{> add_doc .}}
    {{> add_flowchart .}}
    {{> processTextView .}}
    {{> bpmnView .}}
    {{> docView .}}
    </div>


</div>



